. /etc/profile

oe_setup_addon service.system.dispmanx_vnc

if [ ! -f "$ADDON_HOME/dispmanx_vncserver.conf" ]; then
  cp $ADDON_DIR/config/dispmanx_vncserver.conf $ADDON_HOME/
fi
